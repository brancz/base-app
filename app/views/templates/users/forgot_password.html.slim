.container
  .unauth-user-panel.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
    .panel.panel-info
      .panel-heading
        .panel-title.pull-left Forgot password
        .forgot-password.pull-right.text-85= link_to 'Back', '#/users/sign_in'
        .clearfix

      .panel-body
        form id='forgot_password_form' name='forgotPasswordForm' ng-submit='requestPasswordReset()' ng-hide='success'
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input type='email' class='form-control' placeholder='E-Mail' autofocus='autofocus' ng-model='login.user_email' ng-init="login.user_email = ''" name='email'

          .form-group
            .controls
              button.btn.btn-default type='submit' style='margin-top: 15px;'
                i.fa.fa-chevron-right
                |  Submit
        div ng-show='success'
          h3 Password reset instructions send
          p= t("devise.passwords.send_instructions")
